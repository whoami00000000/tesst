<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:padding="20dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        style="@style/heading_medium_24"
        android:textColor="@color/textLight"/>
    <TextView
        android:id="@+id/signUpSubtitle"
        android:layout_below="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete the sign up process to get started"
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"/>
    <TextView
        android:layout_below="@+id/signUpSubtitle"
        android:id="@+id/label_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        style="@style/body_medium_14"
        android:id="@+id/edit_text_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_full_name"
        android:hint="Ivanov Ivan"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_border"/>
    <TextView
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:id="@+id/label_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@id/edit_text_full_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        style="@style/body_medium_14"
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_phone_number"
        android:inputType="phone"
        android:hint="+7(999)999-99-99"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_border"/>
    <TextView
        style="@style/body_medium_14"
        android:textColor="@color/gray_dark"
        android:id="@+id/label_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_below="@id/edit_text_phone_number"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        style="@style/body_medium_14"
        android:id="@+id/edit_text_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_email_address"
        android:inputType="textEmailAddress"
        android:hint="***********@mail.com"
        android:textColorHint="@color/gray_light"
        android:textColor="@color/textLight"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_border"/>
    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/edit_text_email_address"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_dark"
        style="@style/body_medium_14"/>
    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_password">
        <EditText
            style="@style/body_medium_14"
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edittext_border"/>
        <RelativeLayout
            android:id="@+id/password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:layout_below="@id/layout_password"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_dark"
        style="@style/body_medium_14"/>
    <RelativeLayout
        android:id="@+id/layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_confirm_password">
        <EditText
            style="@style/body_medium_14"
            android:id="@+id/edit_text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edittext_border"/>
        <RelativeLayout
            android:id="@+id/confirm_password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/confirm_password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_terms"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_confirm_password"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:button="@drawable/terms_checkbox" />
        <TextView
            android:textAlignment="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/termsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dark"
            style="@style/body_regular_12"
            android:autoLink="web"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:enabled="false"
            android:id="@+id/btn_signup"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSignUp"
            android:background="@drawable/unactive_btn" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Already have an account?"
                android:textColor="#A7A7A7"
                style="@style/body_regular_14"/>

            <TextView
                android:id="@+id/signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                style="@style/body_medium_14"
                android:text="Sign In"
                android:textColor="@color/primary" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/body_regular_14"
            android:textColor="@color/gray_dark"
            android:text="or sign in using"
            android:layout_marginBottom="4dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/google"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>
