<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:layout_marginTop="10mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        style="@style/heading_medium_24"
        android:textColor="@color/textLight"/>

    <TextView
        android:layout_marginTop="5dp"
        style="@style/body_medium_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new password"
        android:textColor="@color/gray_dark" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/body_medium_14"
        android:text="Password"
        android:textColor="@color/gray_dark"
        android:layout_marginTop="50dp"/>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layout_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            style="@style/body_medium_14"
            android:id="@+id/edit_text_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edittext_border"/>
        <RelativeLayout
            android:id="@+id/new_password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/new_password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/label_confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:layout_below="@id/layout_new_password"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_dark"
        style="@style/body_medium_14"/>
    <RelativeLayout
        android:id="@+id/layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_confirm_password">
        <EditText
            style="@style/body_medium_14"
            android:id="@+id/edit_text_confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="**********"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/textLight"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/edittext_border"/>
        <RelativeLayout
            android:id="@+id/confirm_password_visibility_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/confirm_new_password_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eyeslash"/>
        </RelativeLayout>
    </RelativeLayout>


    <Button
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:enabled="false"
        android:id="@+id/newPswlogInBtn"
        style="@style/subtitle_bold_16"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:background="@drawable/unactive_btn"/>

</LinearLayout>