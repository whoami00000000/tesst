<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:layout_marginTop="10mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        style="@style/heading_medium_24"
        android:textColor="@color/textLight"/>

    <TextView
        android:layout_marginTop="5dp"
        style="@style/body_medium_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6 digit numbers sent to your email"
        android:textColor="@color/gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:textAlignment="center"
            style="@style/body_regular_14"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:textColor="@color/black"
            android:id="@+id/field6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_field_disabled"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/resendTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you didnâ€™t receive code, "
            style="@style/body_regular_14"
            android:textColor="@color/gray_dark" />

        <TextView
            android:enabled="false"
            style="@style/body_regular_14"
            android:textColor="@color/gray_dark"
            android:id="@+id/resendTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/setPsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/unactive_btn"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:enabled="false"
        style="@style/subtitle_bold_16"
        android:textAllCaps="false"
        android:text="Set New Password"/>




</LinearLayout>