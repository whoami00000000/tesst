<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OECHAPPFinal" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:background">@color/white</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowBackground">@drawable/background_splash_dark</item>
    </style>

    <style name="NavTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>
    <style name="MainTheme" parent="Theme.AppCompat">

        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:background">#000D1D</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>




</resources>